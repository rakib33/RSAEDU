@model RSAEDU.Models.SubjectInfo


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">       
   
        <div class="color-red">
            @Html.ValidationSummary(true)
        </div>
          @Html.HiddenFor(model => model.Id)
          @Html.HiddenFor(model => model.EntryBy)
          @Html.HiddenFor(model => model.EntryDate)

        <div class="form-group">
            @Html.LabelFor(model => model.ManualCode, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ManualCode, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ManualCode)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SubjectName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.SubjectName , new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SubjectName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ShortName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ShortName , new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.ShortName)
            </div>
        </div>

      
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

